<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.torrserve" name="TorrServer Client" version="0.1.23~beta10" provider-name="Nemiroff, virserg">
    <requires>
        <import addon="xbmc.addon" version="16.0.0" />
        <import addon="xbmc.python" version="3.0.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="navigation.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.python.module" library="resources/site-packages" />
    <extension point="xbmc.addon.metadata">
        <news>Тестовая версия (Kodi 19 Matrix)</news>
        <summary lang="en">TorrServer Client: Torrent video streaming</summary>
        <summary lang="ru">TorrServer Client: потоковое воспроизведение видеоторрентов</summary>
        <description lang="en">TorrServer Client is a torrent streaming engine. It doesn't go on torrent websites for legal reasons.</description>
        <description lang="ru">TorrServer Client - Смотрите фильмы, сериалы, видео, слушайте музыку с торрентов без предварительного скачивания.[CR]Просто добавьте торрент файл или Magnet ссылку и наслаждайтесь шоу — загрузка и воспроизведение будут идти одновременно</description>
        <language>en, ru</language>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>

<addon id="repository.virserg" name="Virserg Repository" version="1.0.1" provider-name="Virserg">
    <extension point="xbmc.addon.repository" name="Virserg Repository">
        <dir minversion="13.0.0" maxversion="18.9.700">
        <info compressed="false">https://raw.githubusercontent.com/virserg/kodirepo/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/virserg/kodirepo/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/virserg/kodirepo/master/zips</datadir>
        </dir>
        <dir minversion="18.9.701">
        <info compressed="false">https://raw.githubusercontent.com/virserg/kodirepo/master/matrix/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/virserg/kodirepo/master/matrix/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/virserg/kodirepo/master/matrix/zips</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Install Addons</summary>
        <description lang="en">Download and install addons</description>
        <summary lang="ru">Репозиторий</summary>
        <description lang="ru">Скачивание и установка плагинов</description>
        <platform>all</platform>
        <assets>
        <icon></icon>
        </assets>
    </extension>
</addon>

</addons>
